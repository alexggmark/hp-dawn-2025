{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- assign invisible_header = settings.invisible_overlay_header -%}

{%- style -%}
  @media screen and (min-width: 750px) {
    #Banner-{{ section.id }} {
      margin-top: {% if invisible_header %} calc(-1px - var(--header-height-desktop-fixed)){% else %} 0{% endif %};
      padding-top: {% if invisible_header %} var(--header-height-desktop-fixed){% else %} 0{% endif %};
    }
  }

  {%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endif -%}
{%- endstyle -%}

{%- style -%}
  #Banner-{{ section.id }}::after {
    content: '';
    display: block;
    opacity: {{ section.settings.mobile_image_overlay_opacity | divided_by: 100.0 }};
    margin-top: {% if invisible_header %} calc(-1px - var(--header-height-desktop-fixed)){% else %} 0{% endif %};
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--color-brand-dark);
  }
  @media screen and (min-width: 750px) {
    #Banner-{{ section.id }}::after {
      opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
    }
  }
{%- endstyle -%}

{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

{% comment %} banner--{{ section.settings.image_height }} {% endcomment %}
<div
  id="Banner-{{ section.id }}"
  class="
    _flex
    _relative
    _isolate
    _z-auto
    _flex-col
    md:_flex-row
    {% if section.settings.image_height == 'adapt' %}
      _h-auto
    {% else %} 
      {% case section.settings.image_height %}
        {% when 'small' %}
          md:_h-[30rem]
        {% when 'medium' %}
          md:_h-[40rem]
        {% when 'large' %}
          md:_h-[44rem]
      {% endcase %}
      {% case section.settings.mobile_image_height %}
        {% when 'small' %}
          _h-[26rem]
        {% when 'medium' %}
          _h-[40rem]
        {% when 'large' %}
          _h-[44rem]
      {% endcase %}
    {% endif %}
    {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}
    _mb-{{ section.settings.margin_bottom | divided_by: 2 }} md:_mb-{{ section.settings.margin_bottom }}"
>
  {%- if section.settings.image != blank -%}

    {% comment %} banner__media, media {% endcomment %}
    <div class="_absolute _top-0 _left-0 _w-full _h-full _block _bg-brand-background _overflow-hidden{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        assign sizes = full_width
      -%}
      {%- if section.settings.mobile_image != blank -%}
        {%- assign mobile_height = section.settings.mobile_image.width | divided_by: section.settings.mobile_image.aspect_ratio -%}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag:
            width: section.settings.image.width,
            height: image_height,
            sizes: sizes,
            widths: widths,
            class: "md:_block _hidden _object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full",
            fetchpriority: fetch_priority
        }}
        {{
          section.settings.mobile_image
          | image_url: width: 1100
          | image_tag:
            width: section.settings.mobile_image.width,
            height: mobile_height,
            sizes: "100vw",
            widths: widths,
            class: "_block md:_hidden _object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full",
            fetchpriority: fetch_priority
        }}
      {%- else -%}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag:
            width: section.settings.image.width,
            height: image_height,
            sizes: sizes,
            widths: widths,
            fetchpriority: fetch_priority,
            class: "_object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full"
        }}
      {%- endif -%}
    </div>
  {%- endif -%}

  {% comment %} Product hotspots {% endcomment %}
  {%- assign hotspot_block_counter = 0 -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'hotspot' -%}
        {%- unless hotspot_block_counter > 0 -%}
          <script src="{{ 'wm__quick-shop.js' | asset_url }}" defer="defer"></script>
        {%- endunless -%}
        {%- assign hotspot_block_counter = hotspot_block_counter | plus: 1 -%}

        {%- capture hotspot_button_content -%}
          <div class="
            _relative
            _cursor-pointer
            _w-8 _h-8 
            _rounded-full 
            _border _border-white/50
            before:_absolute 
            before:_inset-0 
            before:_bg-black/20
            before:_backdrop-blur-sm
            before:_rounded-full 
            after:_absolute 
            after:_inset-1/2 
            after:_w-3.5 after:_h-3.5
            _transition-all _duration-100 after:_transition-all after:_duration-200
            hover:_scale-125
            hover:after:_w-6 hover:after:_h-6 
            after:_bg-white 
            after:_rounded-full 
            after:_transform 
            after:_-translate-x-1/2 
            after:_-translate-y-1/2
            [.loading_&]:_opacity-0
          ">
            &nbsp;
          </div>
        {%- endcapture -%}

        {%- comment %} Desktop Calculations {% endcomment -%}
        {%- assign horizontal_sign = '+' -%}
        {%- if block.settings.hotspot_position_horizontal_reverse -%}
          {%- assign horizontal_sign = '-' -%}
        {%- endif -%}

        {%- assign vertical_sign = '+' -%}
        {%- if block.settings.hotspot_position_vertical_reverse -%}
          {%- assign vertical_sign = '-' -%}
        {%- endif -%}

        {%- comment %} Mobile Calculations {% endcomment -%}
        {%- assign mobile_horizontal_sign = '+' -%}
        {%- if block.settings.hotspot_position_mobile_horizontal_reverse -%}
          {%- assign mobile_horizontal_sign = '-' -%}
        {%- endif -%}

        {%- assign mobile_vertical_sign = '+' -%}
        {%- if block.settings.hotspot_position_mobile_vertical_reverse -%}
          {%- assign mobile_vertical_sign = '-' -%}
        {%- endif -%}

        {%- style -%}
          #HotSpot-{{ block.id }} {
            transform: translate(calc(50% {{ mobile_horizontal_sign }} {{ block.settings.hotspot_position_mobile_horizontal }}rem), calc(50% {{ mobile_vertical_sign }} {{ block.settings.hotspot_position_mobile_vertical }}rem));
          }
          @media screen and (min-width: 750px) {
            #HotSpot-{{ block.id }} {
              transform: translate(calc(50% {{ horizontal_sign }} {{ block.settings.hotspot_position_horizontal }}vw), calc(50% {{ vertical_sign }} {{ block.settings.hotspot_position_vertical }}rem));
            }
          }
        {%- endstyle -%}

        <div class="
          _absolute
          _bottom-1/2
          _right-1/2
          _z-30
          "
          id="HotSpot-{{ block.id }}"
        >
          {% assign product_form_id = 'quick-add-' | append: section.id | append: block.settings.product_select.id %}
          {% render 'wm__quick-shop', custom_button_html: hotspot_button_content, card_product: block.settings.product_select, product_form_id: product_form_id, section_id: section.id %}
        </div>
    {%- endcase -%}
