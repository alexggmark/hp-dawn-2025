{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- assign invisible_header = settings.invisible_overlay_header -%}

{%- style -%}
  @media screen and (min-width: 750px) {
    #Banner-{{ section.id }} {
      margin-top: {% if invisible_header %} calc(-1px - var(--header-height-desktop-fixed)){% else %} 0{% endif %};
      padding-top: {% if invisible_header %} var(--header-height-desktop-fixed){% else %} 0{% endif %};
    }
  }

  {%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endif -%}
{%- endstyle -%}

{%- style -%}
  #Banner-{{ section.id }}::after {
    content: '';
    display: block;
    opacity: {{ section.settings.mobile_image_overlay_opacity | divided_by: 100.0 }};
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--color-overlay-color);
  }
  @media screen and (min-width: 750px) {
    #Banner-{{ section.id }}::after {
      opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
      margin-top: {% if invisible_header %} calc(-1px - var(--header-height-desktop-fixed)){% else %} 0{% endif %};
    }
  }
{%- endstyle -%}

{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

{% comment %} banner--{{ section.settings.image_height }} {% endcomment %}
<div
  id="Banner-{{ section.id }}"
  class="
    _flex
    _relative
    _isolate
    _z-auto
    _flex-col
    md:_flex-row
    {% if section.settings.image_height == 'adapt' %}
      _h-auto
    {% else %} 
      {% case section.settings.image_height %}
        {% when 'small' %}
          md:_h-[30rem]
        {% when 'medium' %}
          md:_h-[40rem]
        {% when 'large' %}
          md:_h-[44rem]
      {% endcase %}
      {% case section.settings.mobile_image_height %}
        {% when 'small' %}
          _h-[26rem]
        {% when 'medium' %}
          _h-[40rem]
        {% when 'large' %}
          _h-[44rem]
      {% endcase %}
    {% endif %}
    {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}
    _mb-{{ section.settings.margin_bottom | divided_by: 2 }} md:_mb-{{ section.settings.margin_bottom }}"
>
  {%- if section.settings.image != blank -%}

    {% comment %} banner__media, media {% endcomment %}
    <div class="_absolute _top-0 _left-0 _w-full _h-full _block _bg-brand-background _overflow-hidden{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        assign sizes = full_width
      -%}
      {%- if section.settings.video -%}
        {{ section.settings.video | media_tag: image_size: '2048x',
          autoplay: true, loop: true, muted: true, controls: false, preload: 'metadata',
          class: "_object-cover _w-full _h-full" }}
      {%- elsif section.settings.mobile_image != blank -%}
        {%- assign mobile_height = section.settings.mobile_image.width | divided_by: section.settings.mobile_image.aspect_ratio -%}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag:
            width: section.settings.image.width,
            height: image_height,
            sizes: sizes,
            widths: widths,
            class: "md:_block _hidden _object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full",
            fetchpriority: fetch_priority
        }}
        {{
          section.settings.mobile_image
          | image_url: width: 1100
          | image_tag:
            width: section.settings.mobile_image.width,
            height: mobile_height,
            sizes: "100vw",
            widths: widths,
            class: "_block md:_hidden _object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full",
            fetchpriority: fetch_priority
        }}
      {%- else -%}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag:
            width: section.settings.image.width,
            height: image_height,
            sizes: sizes,
            widths: widths,
            fetchpriority: fetch_priority,
            class: "_object-cover _object-center _max-w-full _top-0 _left-0 _h-full _w-full"
        }}
      {%- endif -%}
    </div>
  {%- endif -%}

  {% comment %} Product hotspots {% endcomment %}
  {%- assign hotspot_block_counter = 0 -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'hotspot' -%}
        {%- unless block.settings.hotspot_location == "second" -%}
          {%- if hotspot_block_counter > 0 -%}
            {%- assign skip_script = true -%}
          {%- endif -%}
          {% render 'wm__hotspot',
            skip_script: skip_script,
            block_id: block.id,
            product_select: block.settings.product_select,
            hotspot_position_horizontal_reverse: block.settings.hotspot_position_horizontal_reverse,
            hotspot_position_vertical_reverse: block.settings.hotspot_position_vertical_reverse,
            hotspot_position_mobile_horizontal_reverse: block.settings.hotspot_position_mobile_horizontal_reverse,
            hotspot_position_mobile_vertical_reverse: block.settings.hotspot_position_mobile_vertical_reverse,
            hotspot_position_horizontal: block.settings.hotspot_position_horizontal,
            hotspot_position_vertical: block.settings.hotspot_position_vertical,
            hotspot_position_mobile_horizontal: block.settings.hotspot_position_mobile_horizontal,
            hotspot_position_mobile_vertical: block.settings.hotspot_position_mobile_vertical
          %}
        {%- endunless -%}
    {%- endcase -%}
  {%- endfor -%}

  <div class="
    _flex
    _relative
    _w-full
    _h-full
    _z-20
    md:_py-12 _py-4
    {% render 'wm__position', position: section.settings.mobile_content_position %}
    {% render 'wm__position', position: section.settings.desktop_content_position, screen: 'md' %}
    page-width
    {% if section.settings.container_width == 'narrow' %} page-width--narrow{% elsif section.settings.container_width == 'full' %} page-width--full{% endif %}
    {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}
  ">
    <div class="
      _text-wrap
      _z-10
      {% if section.settings.show_text_box == true and section.settings.show_mobile_text_box == false %} md:_bg-brand-light _bg-transparent md:_px-8 _px-0{% endif %}
      {% if section.settings.show_mobile_text_box == true and section.settings.show_text_box == false %} md:_bg-transparent _bg-brand-light md:_px-0 _px-0{% endif %}
      {% if section.settings.show_text_box == true and section.settings.show_mobile_text_box == true %} _bg-brand-light _px-8{% endif %}
      _relative
      md:_px-0 _px-3
      md:_py-6 _py-3
      _text-{{ section.settings.mobile_content_alignment }}
      md:_text-{{ section.settings.desktop_content_alignment }}
      lg:_max-w-[50%]
      md:_max-w-[70%]
    ">
      {%- assign decoration_tag_on = false -%}
      
      {% comment %} <a href="#_" class="_relative _inline-flex _items-center _justify-start _px-6 _py-3 _overflow-hidden _font-medium _transition-all _bg-white _rounded _hover:bg-white _group">
        <span class="_w-48 _h-48 _rounded _rotate-[90deg] _bg-purple-600 _absolute _bottom-0 _left-0 _-translate-x-full _ease-out _duration-500 _transition-all _translate-y-full _mb-9 _ml-9 group-hover:_ml-0 group-hover:_mb-32 group-hover:_translate-x-0"></span>
        <span class="_relative _w-full _text-left _text-black _transition-colors _duration-300 _ease-in-out group-hover:_text-white">Button Text</span>
      </a> {% endcomment %}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading-type-1' -%}
            {%- assign decoration_tag_on = block.settings.decoration_tag_on -%}
            
            {%- if decoration_tag_on -%}
              <span class="md:_flex _block _items-center _gap-2 _mb-3">
            {%- endif -%}

            <{{ block.settings.heading_tag }}
              class="
                {% if decoration_tag_on %} _inline _flex-shrink-0{% endif %}
                _text-{{ block.settings.mobile_text_size }}
                md:_text-{{ block.settings.desktop_text_size }}
                _text-brand-light _font-heading-primary
                _mb-{{ block.settings.margin_bottom | divided_by: 2 }} md:_mb-{{ block.settings.margin_bottom }}
                {% if block.settings.invert_colours %} md:_text-white{% else %} md:_text-brand-dark{% endif %}
                {% if block.settings.mobile_invert_colours %} _text-white{% else %} _text-brand-dark{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </{{ block.settings.heading_tag }}>

            {%- if decoration_tag_on -%}
                <div class="_items-center _gap-3 _ml-3 md:_flex _hidden _mt-2">
                  <div class="_w-12">
                    <div class="_block heading-decoration-tag--line{% if block.settings.decoration_tag_invert %} _bg-brand-light{% else %} _bg-brand-dark{% endif %}"></div>
                  </div>
                  <span class="heading-decoration-tag--text _uppercase _font-heading-small _text-sm _text-nowrap{% if block.settings.decoration_tag_invert %} _text-brand-light{% else %} _text-brand-dark{% endif %}">{{ block.settings.decoration_tag_text }}</span>
                </div>
              </span>
            {%- endif -%}

          {%- when 'top-heading-type-1' -%}
            <{{ block.settings.heading_tag }}
              class="
                _text-{{ block.settings.mobile_text_size }}
                md:_text-{{ block.settings.desktop_text_size }}
                _font-heading-small
                _mb-{{ block.settings.margin_bottom | divided_by: 2 }} md:_mb-{{ block.settings.margin_bottom }}
                {% if block.settings.invert_colours %} md:_text-white{% else %} md:_text-brand-dark{% endif %}
                {% if block.settings.mobile_invert_colours %} _text-white{% else %} _text-brand-dark{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </{{ block.settings.heading_tag }}>

          {%- when 'text' -%}
            {% comment %} TODO: replace max-w- with something better {% endcomment %}
            <div class="
              md:_text-lg _text-base _max-w-[380px]
              _mb-{{ block.settings.margin_bottom }}
              {% if block.settings.invert_colours %} md:_text-white{% else %} md:_text-brand-dark{% endif %}
              {% if block.settings.mobile_invert_colours %} _text-white{% else %} _text-brand-dark{% endif %}
            "
            {{ block.shopify_attributes }}>
              <p>{{ block.settings.text }}</p>
            </div>

          {%- when 'buttons' -%}
            <div
              class="
                _flex
                _flex-row
                _flex-wrap _items-start
                _gap-4
                {% if section.settings.desktop_content_alignment == 'center' %} md:_justify-center{% elsif section.settings.desktop_content_alignment == 'right' %} md:_justify-end{% else %} md:_justify-start{% endif %}
                {% if section.settings.mobile_content_alignment == 'center' %} _justify-center{% elsif section.settings.mobile_content_alignment == 'right' %} _justify-end{% else %} _justify-start{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="
                    _button-{{ block.settings.button_style_1 }}
                  "
                >
                  <span>{{- block.settings.button_label_1 | escape -}}</span>
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a
                  {% if block.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_2 }}"
                  {% endif %}
                  class="
                    _button-{{ block.settings.button_style_2 }}
                  "
                >
                  <span>{{- block.settings.button_label_2 | escape -}}</span>
                </a>
              {%- endif -%}
            </div>

          {%- when 'custom_liquid' -%}
            <div class="_mb-{{ block.settings.margin_bottom }}">
              {{ block.settings.custom_liquid }}
            </div>

        {%- endcase -%}
      {%- endfor -%}

      {%- unless decoration_tag_on == false -%}
        {% style %}
          .heading-decoration-tag--line {
            height: 1px;
            width: 0;
            animation: lineGrow var(--duration-extra-long) var(--ease-out-slow) forwards;
            animation-delay: 0.8s;
          }
          .heading-decoration-tag--text {
            opacity: 0;
            animation: var(--animation-slide-in-quick);
            animation-delay: 1.4s;
          }
        {% endstyle %}
      {%- endunless -%}
    </div>
  </div>
</div>

