{% comment %} 
  Snippet version of 'wm__video' - just useful to drop in video with play controls where we want

  Usage:
  {% render 'wm__video',
    video: section.settings.video,
    video_url: section.settings.video_url,
    description: section.settings.description,
    cover_image: section.settings.cover_image,
    full_width: section.settings.full_width,
    enable_video_looping: section.settings.enable_video_looping
  %}
{% endcomment %}
{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'wm__component-deferred-media.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign video_id = video.id | default: video_url.id
  assign video_alt = video.alt | default: description
  assign alt = 'sections.video.load_video' | t: description: video_alt | escape
  assign poster = video.preview_image | default: cover_image

  if video != null
    assign ratio_diff = video.aspect_ratio | minus: poster.aspect_ratio | abs
    if ratio_diff < 0.01 and ratio_diff > 0
      assign fix_ratio = true
    endif
  endif
-%}

{%- capture sizes -%}
  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
  calc(100vw - 10rem), 100vw
{%- endcapture -%}


<deferred-media
  class="video-section__media deferred-media gradient global-media-settings{% if full_width %} global-media-settings--full-width{% endif %}{% if fix_ratio %} media-fit-cover{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  data-media-id="{{ video_id }}"
  {% if poster != null %}
    style="--ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;"
  {% endif %}
>
  <button
    id="Deferred-Poster-Modal-{{ video_id }}"
    class="video-section__poster media deferred-media__poster media--landscape"
    type="button"
    aria-label="{{ alt }}"
  >
    {%- if poster != null -%}
      {{
        poster
        | image_url: width: 3840
        | image_tag: sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
      }}
    {%- else -%}
      {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
    {%- endif -%}
    <span class="deferred-media__poster-button motion-reduce">
      <span class="svg-wrapper _w-10">
        {{- 'icon-play.svg' | inline_asset_content -}}
      </span>
    </span>
  </button>
  <template>
    {%- if video == null and video_url != null -%}
      {%- liquid
        assign loop = ''
        if enable_video_looping
          assign loop = '&loop=1&playlist=' | append: video_id
        endif
      -%}
      {%- if video_url.type == 'youtube' -%}
        <iframe
          src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
          class="js-youtube"
          allow="autoplay; encrypted-media"
          allowfullscreen
          title="{{ description | escape }}"
        ></iframe>
      {%- else -%}
        <iframe
          src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}"
          class="js-vimeo"
          allow="autoplay; encrypted-media"
          allowfullscreen
          title="{{ description | escape }}"
        ></iframe>
      {%- endif -%}
    {%- else -%}
      {{
        video
        | video_tag:
          image_size: '1100x',
          autoplay: true,
          loop: enable_video_looping,
          controls: true,
          muted: false
      }}
    {%- endif -%}
  </template>
</deferred-media>
